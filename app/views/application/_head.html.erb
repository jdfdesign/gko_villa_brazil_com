<head>
	<meta charset='utf8'>
	<%= raw %(<meta name="google-site-verification" content="#{site.google_webmaster_tools_key}" />) if site.google_webmaster_tools_key.present? -%>
	<title><%= @meta_title %></title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<%= raw %(<meta name="description" content="#{@meta_description}" />) if @meta_description.present? -%>
	<%= raw %(<meta name="robots" content="#{@meta_robots}" />) if @meta_robots.present? -%> 
  <%= raw %(<link rel="canonical" content="#{@canonical}" />) if @canonical.present? -%>
  <% @alternate_links.each do |link| %> 
    <%= raw link %> 
  <% end if @alternate_links.present? %>
	<%= yield :meta %>                                                
	<!-- Le styles -->
  <script type="text/javascript">
