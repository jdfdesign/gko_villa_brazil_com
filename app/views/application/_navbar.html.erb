<% cache([site, I18n.locale, 'navbar']) do %>
<!-- Header
================================================== -->
<header class="navbar navbar-default hidden-print">
  <%= render "locales_select" %>
  <div class="container">
    <div class="navbar-header">
      <%= link_to(site.title, root_url, :class => "navbar-brand") %>
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <nav class="collapse navbar-collapse">
      <%= render 'menu', :sections => site.primary_menu, :menu_name => 'navbar-nav' %>
    </nav>
  </div>
</header>
<% end %>